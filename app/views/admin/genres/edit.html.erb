<div class="row">
  <h1 class="under-border">ジャンル編集画面</h1>
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <%= form_with url: admins_genre_path(@genre),model:@genre,local: true do |f| %>
      <%= render 'layouts/error_message', model: @genre %>
      <table class="table">
        <tr>
          <td><%= f.text_field :name, class:"form-control"%></td>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :有効 %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :無効 %>
          </td>
          <td><%= f.submit "変更を保存する",class: "btn btn-primary" %></td>
        </tr>
      </table >
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>